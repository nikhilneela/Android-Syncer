<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.widget"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

<application android:icon="@drawable/icon" android:label="@string/app_name">
    
        <activity android:name=".Buttons"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.widget.Buttons" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name=".MarkanaActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name=".ListAppsActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.widget.ListAppsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".NewAppsOnCloud"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.markana.NewAppsOnCloud" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
</application>
    
</manifest>