<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
 <Button 
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:onClick="onClick"
 	android:text="@string/ApkSync"
 	android:id="@+id/apkSync"
 	/>
 <Button 
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:onClick="onClick"
 	android:text="@string/DataSync"
 	android:id="@+id/dataSync"
 	/>
 <Button 
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:onClick="onClick"
 	android:text="@string/AppsOnCloud"
 	android:id="@+id/appsOnCloud"
 	/>
 <Button 
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:onClick="onClick"
 	android:text="@string/InstalledApps"
 	android:id="@+id/installedApps"
 	/>
</LinearLayout>
